{
  "name": "prepackage-checks",
  "description": "Validates package invariants before publishing",
  "author": "Andrew Aylett",
  "version": "0.1.2",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewaylett/self-throttle.git"
  },
  "type": "module",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsc --build .",
    "postbuild": "prepackage-checks && node --experimental-vm-modules dist/index.js build",
    "lint": "eslint .",
    "test": "echo 'no tests :('",
    "prebuild": "npm run test",
    "pretest": "npm run lint",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "dev": "npm run lint:fix && npm run build"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "ignore": "^5.2.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.3",
    "@types/node": "16.11.59",
    "@types/semver": "^7.3.12",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.23.1",
    "eslint-config-andrewaylett": "2.0.0",
    "prepackage-checks": "0.1.2",
    "prettier": "2.7.1",
    "typescript": "4.8.2"
  }
}
